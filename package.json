{
  "name": "car-park-api",
  "version": "1.0.0",
  "description": "A car parking management system",
  "main": "server.js",
  "author": "Raghuram Kumar <raghuk46@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn run clean && yarn run build-server && yarn run copy-env",
    "build-server": "babel src -d dist --source-maps --copy-files --ignore node_modules",
    "clean": "rm -rf ./dist",
    "copy-env": "copyfiles -a .env dist",
    "dev": "cross-env NODE_ENV=development nodemon  ./src/server.js --exec babel-node --watch src --ignore '*.test.js'",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "start": "node ./dist/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.1.0",
    "helmet": "^4.0.0",
    "joi": "^17.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "morgan": "^1.10.0",
    "query-string": "^6.13.1",
    "redis": "^3.0.2",
    "winston": "^3.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --quiet",
      "git add --force"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-classes": "^7.10.4",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/register": "^7.10.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "copyfiles": "^2.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-esnext": "^4.1.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "jest-environment-node": "^26.3.0",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2"
  }
}
